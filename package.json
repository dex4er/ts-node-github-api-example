{
  "name": "@dex4er/ts-node-github-api-example",
  "version": "0.1.0",
  "description": "Example of Github API v4 client written in Typescript with Apollo library",
  "repository": {
    "type": "git",
    "url": "https://github.com/dex4er/ts-node-github-api-example"
  },
  "author": "Piotr Roszatycki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dex4er/ts-node-github-api-example/issues"
  },
  "homepage": "http://github.com/dex4er/ts-node-github-api-example",
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.6.0",
    "apollo-client": "^2.6.0",
    "apollo-link": "^1.2.11",
    "apollo-link-context": "^1.0.17",
    "apollo-link-http": "^1.5.14",
    "apollo-link-retry": "^2.2.13",
    "cross-fetch": "^3.0.3",
    "dotenv": "^8.0.0",
    "graphql": "^14.3.1",
    "graphql-tag": "^2.10.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.2.0",
    "@graphql-codegen/typescript": "1.2.0",
    "@graphql-codegen/typescript-operations": "^1.2.0",
    "@types/graphql": "^14.2.0",
    "@types/node": "^12.0.2",
    "@types/node-fetch": "^2.3.4",
    "graphql-codegen-typescript-document-nodes": "^1.2.0",
    "graphql-types": "^1.1.0",
    "markdownlint-cli": "^0.16.0",
    "prettier": "^1.17.1",
    "shx": "^0.3.2",
    "ts-node": "^8.2.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  },
  "bin": {
    "github-apiv4-viewer-query": "bin/github-apiv4-viewer-query.js"
  },
  "scripts": {
    "clean": "shx rm -f bin/*.js operations/*.js operations/*.ts schema/*.js schema/*.json schema/*.ts",
    "codegen": "npm run github-apiv4-get-schema && npm run graphql-codegen",
    "compile": "npm run codegen && tsc --pretty --project . && shx sed -i \"s/env ts-node/env node/\" bin/*.js",
    "github-apiv4-get-schema": "ts-node --require dotenv/config bin/github-apiv4-get-schema.ts",
    "github-apiv4-viewer-query": "ts-node --require dotenv/config --require tsconfig-paths/register bin/github-apiv4-viewer-query.ts",
    "graphql-codegen": "graphql-codegen --config codegen.yml",
    "lint": "tsc --noEmit --pretty --project . && prettier --ignore-path .gitignore --list-different \"**/*.json\" \"**/*.md\" \"**/*.ts\" \"**/*.yml\" && tslint --format stylish --project . && markdownlint \"*.md\"",
    "postpublish": "git tag v$npm_package_version -a -m \"Release v$npm_package_version\" && git push --tags",
    "prepack": "npm run compile && npm run pretest",
    "prepublishOnly": "npm run test:script",
    "pretest": "npm run codegen && npm run lint",
    "test": "npm run test:script",
    "test:script": "npm run github-apiv4-viewer-query"
  }
}
